- breadcrumb :problem, @problem
.page-header
  %h2
    = @problem.try(:name)
    .small= @problem.try(:language)

.lead
  = @problem.description

.row
  .col-md-6
    %h3.pull-left
      Author
      %small= link_to @problem.user.name, user_path(@problem.user_id)
  .col-md-6
    %h3.pull-right
      Difficulty
      %small= @problem.try(:difficulty)

.row
  .panel.panel-default
    .panel-body
      - if @problem.body.blank?
        %p No Description Body!
      - else
        = markdown(@problem.body)


.row
  .col-xs-4.col-md-4.col-lg-4
    = button_to "Submit an Attempt",
      new_problem_attempt_path(@problem.id),
      method: :get,
      class: 'btn btn-md btn-primary'
  .col-xs-4.col-md-4.col-lg-4
    = button_to 'Show Attempts',
      problem_attempts_path(@problem.id),
      method: :get,
      class: 'btn btn-md btn-default'
  .col-xs-4.col-md-4.col-lg-4
    - if policy(@problem).edit?
      = button_to 'Edit Problem',
        edit_problem_path(@problem.id),
        method: :get,
        class: 'btn btn-md btn-warning'

