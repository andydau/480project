.container
  - breadcrumb :attempt, @attempt
  .page-header
    %h2 Attempt
  %p
    Name: #{@attempt.user.name}
    %br
    Problem: #{@attempt.problem.name}
    %br
    Submission: #{@attempt.submission if @attempt}
    %br
    Grade:
    = @attempt.show_grade
    - if @attempt.grade == -1
      - if policy(@attempt).edit?
        %td= button_to 'Grade attempt', edit_problem_attempt_path(@attempt.problem_id, attempt.id), method: :get, class: 'btn btn-xs btn-primary'
      
  %p= link_to "Back to all attempts", problem_attempts_path(@attempt.problem_id)
